@page
@model Models.Category.IndexModel
@{
}




<h1>Categories</h1>

@if (Model.Categories == null || !Model.Categories.Any())
{
    <p>No categories found!</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <a asp-page="/Category/Update" asp-route-id="@category.Id">Edit</a> |
                        <a asp-page="/Category/Delete" asp-route-id="@category.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-page="/Category/Create">Add New Category</a>
